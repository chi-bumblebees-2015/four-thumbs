<h2><%= @review.title %> | <%= link_to @review.movie.name, @review.movie %></h2>
<h4>By: <%= link_to @review.user.name, @review.user %> <%= @review.user.trusted_string %></h4>

<p><%= @review.get_upvotes.size %> Likes</p>
<% if current_user %>
  <%= link_to like_review_path(@review), method: :put do %>
    <% if (current_user.voted_for? @review) %>
      Unlike
    <% else %>
      Like!
    <% end %>
  <% end %>
<% end %>

<div>
  <p>Rating: <%= @review.rating %> thumbs up</p>
  <p><%= @review.content %></p>
</div>

<p>Created at: <%= @review.created_at %></p>
<% if @review.updated_at != @review.created_at %>
  <p>Updated at: <%= @review.updated_at %></p>
<% end %>

<% if @review.user == current_user %>
  <%= link_to "Edit your review", edit_movie_review_path(@review.movie, @review) %>
<% end %>

<h4>Comments</h4>
<% @comments.each do |comment| %>
  <p><%= comment.user.name%> <strong><%= comment.user.trusted_string %></strong>
    <% if comment.user == @review.user %>
      | <strong>Original Reviewer</strong>
    <% end %>
  </p>
  <p><%= comment.content %></p>
<%end%>

<%if session[:user_id] %>
  <%= render partial: "comments/comments_form", locals: { review: @review, new_comment: @new_comment } %>
<%else%>
  <p>To comment, you need to <a href="/login">login</a> or <a href="/users/new">register</a> for an account.</p>
<%end%>
