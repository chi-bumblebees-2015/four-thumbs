<h1><%= @movie.name %></h1>
<p><%= @movie.plot_summary %></p>
<h2>Trusted Reviews</h2>
<% @movie.reviews.joins(:user).where('users.trusted' => true).order(rating: :desc).each do |review| %>
  <ul>
  	<li><%= review.user.username %> 
  	<% if review.user.trusted %>
  	- TRUSTED USER
  	<%end%>
  	</li>
  	<li><%= review.title %></li>
  	<li><%= review.rating %></li>
  </ul>
<% end %>

<h2>Untrusted Reviews (or User Reviews)</h2>
<% @movie.reviews.joins(:user).where('users.trusted' => false).order(rating: :desc).each do |review| %>
