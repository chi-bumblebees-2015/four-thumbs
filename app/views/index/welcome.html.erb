<h1>Four Thumbs</h1>
<% @movies.each do |movie| %>
  <li><%= link_to movie.name, movie, id: "movie-#{movie.id}" %></li>
<% end %>
<% if current_user %>
  <p>Welcome, <%= current_user.name %></p>
  <a href="/logout">Log out</a>
<% else %>
  <a href="/users/new">New User</a>
  <a href="/login">Log In</a>
<% end %>
